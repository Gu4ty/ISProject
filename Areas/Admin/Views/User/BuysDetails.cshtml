@model ISProject.Models.ViewModels.ShoppingHistoryModel

@{
    ViewData["Title"] = "BuysDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class ="row">
    <div class = "col-6">
        <h2 class= "text-info">Shopping History</h2>
    </div>
    <div class = "col-6 text-right">
        <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-info">Back</a>
    </div>
</div>

@if(Model.Orders.Count() > 0)
{
    @foreach(var item in Model.Orders)
    {
        <div class="border border-info rounded col-12 row" style="margin-bottom:5px; margin-top:5px; padding:5px">
                <div class="col-9">
                    <div class="row col-md-9 col-sm-12">
                        <h4>Date: @Html.DisplayFor(modelItem => item.OrderTime)</h4>
                    </div>
                    <div class="row col-12 text-justify" style="color:maroon">
                        <h4>Total Price: @Html.DisplayFor(modelItem => item.TotalPrice)</h4>
                    </div>
                </div>
                <div class="text-right col-3 text-center p-2">
                    <a asp-action="ShopDetails" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
    }
}
else{
    <p>This user has not bought any products yet...</p>
}
