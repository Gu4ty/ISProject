@using ISProject.Utils
@using ISProject.Models
@model ISProject.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="col-12 row">
    <div class="col-9">
        @if(Model as Seller != null){
            <h4>Seller</h4>
        } 
        else{
            <h4>Customer</h4>
        }
    </div>
    <div class="text-right">
        <a class="btn btn-info" asp-action="Index"> Back to List </a>
    </div>
</div>
    
<hr />
<div>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="row">
                <div class="col-9">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Name" class="control-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="UserName" class="control-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Email" class="control-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>                
                    </div>
                </div>
                <div class="col-3">            
                    <div class= "form-group">
                        <input type ="radio" name ="rdUserRole" value = @SD.SellerUser checked> Seller &nbsp;
                    </div>
                    <div class= "form-group">
                        <input type ="radio" name ="rdUserRole" value = @SD.CustomerUser checked> Regular User
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Save" class="btn btn-primary form-control col-4 offset-4" />
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
