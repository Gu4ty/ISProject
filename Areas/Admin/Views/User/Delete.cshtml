@using ISProject.Models
@model ISProject.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="col-12 row">
    <div class="col-9">
        @if(Model as Seller != null){
            <h4>Seller</h4>
        } 
        else{
            <h4>Customer</h4>
        }
    </div>
    <div class="text-right">
        <a class="btn btn-info" asp-action="Index"> Back to List </a>
    </div>
</div>

<hr />
<div>
    <div class="col-12">
        <div class="row">
            <div class="col-9">
                <div class="form-group row">
                    <div class="col-3">
                        <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                    </div>
                    <div class="col-5">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <strong>@Html.DisplayNameFor(model => model.UserName)</strong>
                    </div>
                    <div class="col-5">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <strong>@Html.DisplayNameFor(model => model.Email)</strong>
                    </div>
                    <div class="col-5">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <strong>@Html.DisplayNameFor(model => model.PhoneNumber)</strong>
                    </div>
                    <div class="col-5">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </div>                
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <form asp-action="Delete">
        <div class="row col-12">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger col-2 offset-9" />
        </div>
    </form>
</div>