@model Product

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
    <h2 class="text-info">Create new Product</h2>
<br /> 

<div>
    <form asp-action="CreateProduct">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-3">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Create" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Create" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
