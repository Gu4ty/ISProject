@model ISProject.Models.ProductSale
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class ="row">
    <div class = "col-6">
        <h2 class= "text-info">Details</h2>
    </div>
</div>

<div>
    <form asp-action="Details">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Product.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Name" class="form-control" readonly style="background: #fff" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Product.Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Product.Description" class="form-control" readonly style="background: #fff; height: 100px;"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" id="priceInput" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Units" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Units" class="form-control" id="unitsInput" />
            </div>
            <span asp-validation-for="Units" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-3">
                <div class="row">
                    <div class="col-6">
                        <button type="submit" value="Apply Changes" class="btn btn-info form-control">Apply Changes</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>