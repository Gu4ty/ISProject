@if(Model.Count() > 0)
{
    @foreach(var item in Model)
    {
        <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
            <div class="row">
                <div class="col-md-9 col-sm-12">
                    <div class="row">
                        <div class="col-8">
                            <label class="text-primary" style="font-size:21px; color:maroon">@(item.AuctionHeader.User.Name) is auctioning one or more products</label>
                        </div>
                        <div class="col-4 text-right" style="color:maroon">
                            <h4>Price: @Html.DisplayFor(modelItem => item.AuctionHeader.CurrentPrice)</h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row col-12 text-justify">
                <h5>Total of products: @item.AuctionProduct.Count()</h5>
                @* <ul class="list-group">
                    @foreach (var p in item.AuctionProduct)
                    {
                        <li class="list-group-item">
                            @p.Product.Name
                        </li>
                    }
                <ul> *@
            </div>
            <br>
            <div class="row col-12 text-justify">
                <div class="col-4 text-left" style="color:maroon">
                    <h6>Begin Date: @item.AuctionHeader.BeginDate</h6>
                </div>
                <div class="col-4 text-left" style="color:maroon">
                    <h6>End Date: @item.AuctionHeader.EndDate</h6>
                </div>

                <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                    <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.AuctionHeader.Id">Details</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <br />
    <h2>There are no auctions...</h2>
}