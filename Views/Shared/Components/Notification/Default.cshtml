@model IEnumerable<Notification>

@if(Model.Count() > 0){
    <li class="nav-item" >
        <a class="nav-link notification" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-bell "></i>
            <span class="badge">@Model.Count()</span>
        </a>
    </li>
        
        
}
else{
    <div>
        <i class="fas fa-bell"></i>
    </div>
  
}